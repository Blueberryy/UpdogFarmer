<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.steevsapps.updogfarmer.MainActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:textSize="@dimen/text_size_default"
            android:layout_marginTop="4dp"
            android:id="@+id/start_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_service"
            android:onClick="clickHandler"/>

        <TextView
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desc_start"/>

        <Button
            android:id="@+id/idle_to_ready"
            android:textSize="@dimen/text_size_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/idle_to_ready"
            android:onClick="clickHandler" />

        <TextView
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desc_idle_to_ready" />

        <Button
            android:textSize="@dimen/text_size_default"
            android:layout_marginTop="4dp"
            android:id="@+id/stop_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stop_service"
            android:onClick="clickHandler"/>

        <TextView
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desc_stop"/>

    </LinearLayout>

</LinearLayout>
